<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    tools:context=".ProfilAnakActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/toolbar"
        android:background="@drawable/round_btn"
        app:logo="@drawable/baseline_arrow_back_24"
        app:title="Profil Anak"
        app:titleMarginStart="25dp"
        app:titleTextColor="@color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp">

            <TextView
                android:id="@+id/namalengkap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Lengkap"
                android:textSize="18dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nunito_black"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:hint="Masukkan Nama Lengkap"
                android:maxLines="1"
                android:textSize="18sp"
                android:padding="12dp"
                android:textColor="@color/black"
                android:ems="10"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/jk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenis kelamin"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nunito_black"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/et_jk"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:hint="Masukkan Jenis Kelamin"
                android:maxLines="1"
                android:textSize="18sp"
                android:padding="12dp"
                android:textColor="@color/black"
                android:ems="10"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tmptlahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tempat Lahir"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nunito_black"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/et_tmptlahir"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:hint="Masukkan Tempat Lahir"
                android:maxLines="1"
                android:textSize="18sp"
                android:padding="12dp"
                android:textColor="@color/black"
                android:ems="10"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tgllahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nunito_black"
                android:textColor="@color/black"/>


            <EditText
                android:id="@+id/et_tgllahir"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/custom_edittext"
                android:hint="Masukkan Tanggal lahir"
                android:maxLines="1"
                android:textSize="18sp"
                android:padding="12dp"
                android:textColor="@color/black"
                android:ems="10"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="5dp"/>

            <ImageButton
                android:id="@+id/btnDate"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_marginLeft="320dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-56dp"
                android:src="@drawable/baseline_calendar_month_24" />

            <TextView
                android:id="@+id/relasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Relasi"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nunito_black"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/et_relasi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:hint="Relasi"
                android:maxLines="1"
                android:textSize="18sp"
                android:padding="12dp"
                android:textColor="@color/black"
                android:ems="10"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/btn_simpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simpan"
                android:backgroundTint="@color/biru"
                app:cornerRadius="20dp"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/btn_hapus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hapus Anggota"
                android:backgroundTint="@color/merah"
                app:cornerRadius="20dp"
                android:layout_marginTop="2dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>