<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".cancel.ProfilAnakActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/round_btn">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="12dp"
            android:text="Profil Anak"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp">

            <TextView
                android:id="@+id/namalengkap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Lengkap"
                android:textSize="15sp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:hint="Masukkan Nama Lengkap"
                android:maxLines="1"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_regular"
                android:padding="12dp"
                android:textColor="@color/black"
                android:ems="10"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/jk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/et_jk"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:hint="Masukkan Jenis Kelamin"
                android:maxLines="1"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_regular"
                android:padding="12dp"
                android:textColor="@color/black"
                android:ems="10"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tmptlahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tempat Lahir"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/et_tmptlahir"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:hint="Masukkan Tempat Lahir"
                android:maxLines="1"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_regular"
                android:padding="12dp"
                android:textColor="@color/black"
                android:ems="10"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tgllahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"/>


            <EditText
                android:id="@+id/et_tgllahir"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/custom_edittext"
                android:hint="Masukkan Tanggal lahir"
                android:maxLines="1"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_regular"
                android:padding="12dp"
                android:textColor="@color/black"
                android:ems="10"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="5dp"/>

            <ImageButton
                android:id="@+id/btnDate"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_gravity="right"
                android:layout_marginTop="-56dp"
                android:src="@drawable/baseline_calendar_month_24" />

            <TextView
                android:id="@+id/relasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Relasi"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/et_relasi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:hint="Relasi"
                android:maxLines="1"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_regular"
                android:padding="12dp"
                android:textColor="@color/black"
                android:ems="10"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/btn_simpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simpan"
                android:textColor="@color/white"
                android:backgroundTint="@color/biru"
                app:cornerRadius="20dp"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/btn_hapus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hapus Anggota"
                android:backgroundTint="@color/merah"
                android:textColor="@color/white"
                app:cornerRadius="20dp"
                android:layout_marginTop="2dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>