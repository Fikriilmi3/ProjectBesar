<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".UbahAkunActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/round_btn">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="12dp"
            android:text="Ubah Akun"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp">

            <TextView
                android:id="@+id/tvusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="15sp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:hint="Username"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_regular"
                android:padding="12dp"
                android:textColor="@color/black"
                android:ems="10"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/namalengkap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Nama Lengkap"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/nama_anak"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:hint="Nama Lengkap Anak"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_regular"
                android:padding="12dp"
                android:textColor="@color/black"
                android:ems="10"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/jk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/jenis_kelamin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:hint="Jenis Kelamin"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_regular"
                android:padding="12dp"
                android:textColor="@color/black"
                android:ems="10"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tempatlahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tempat Lahir"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/tempat_lahir"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:hint="Tempat Lahir"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_regular"
                android:padding="12dp"
                android:textColor="@color/black"
                android:ems="10"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tgllahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/tgl_lahir"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:hint="Tanggal Lahir"
                android:inputType="date"
                android:maxLines="1"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_regular"
                android:padding="12dp"
                android:textColor="@color/black"
                android:ems="10"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/ibu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Ibu"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/nama_ibu"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:hint="Nama Ibu"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_regular"
                android:padding="12dp"
                android:textColor="@color/black"
                android:ems="10"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tvtelepone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nomor Telepon"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/telepone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:hint="Nomor Telepon"
                android:inputType="number"
                android:maxLines="1"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_regular"
                android:padding="12dp"
                android:textColor="@color/black"
                android:ems="10"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:hint="Masukkan Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_regular"
                android:padding="12dp"
                android:textColor="@color/black"
                android:ems="10"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/id_pengguna"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:hint="Masukkan Password"
                android:visibility="gone"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_regular"
                android:padding="12dp"
                android:textColor="@color/black"
                android:ems="10"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/btn_simpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simpan"
                android:textColor="@color/white"
                android:backgroundTint="@color/biru"
                app:cornerRadius="20dp"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>