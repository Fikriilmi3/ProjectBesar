<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".perkembangan.kpsp.KPSPActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/biru">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="12dp"
            android:text="KPSP"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/kpsp24bulan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/birumuda"
                app:cardCornerRadius="15dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/gbr"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:maxHeight="200dp"
                        android:layout_marginLeft="-10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/kpsp1" />

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/gbr"
                        android:layout_marginTop="15dp"
                        android:text="KPSP"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunito_black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Untuk anak umur 24 bulan"
                        android:layout_below="@+id/title"
                        android:layout_marginTop="3dp"
                        android:layout_toRightOf="@id/gbr"
                        android:textSize="14dp"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="@color/black"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/kpsp30bulan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/birumuda"
                app:cardCornerRadius="15dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/gbr2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:maxHeight="200dp"
                        android:layout_marginLeft="-10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/kpsp2" />

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/gbr2"
                        android:layout_marginTop="15dp"
                        android:text="KPSP"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunito_black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Untuk anak umur 30 bulan"
                        android:layout_below="@+id/title2"
                        android:layout_toRightOf="@id/gbr2"
                        android:layout_marginTop="3dp"
                        android:textSize="14dp"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="@color/black"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/kpsp36bulan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/birumuda"
                app:cardCornerRadius="15dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/gbr3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:maxHeight="200dp"
                        android:layout_marginLeft="-10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/kpsp3" />

                    <TextView
                        android:id="@+id/title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/gbr3"
                        android:layout_marginTop="15dp"
                        android:text="KPSP"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunito_black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Untuk anak umur 36 bulan"
                        android:layout_below="@+id/title3"
                        android:layout_toRightOf="@id/gbr3"
                        android:layout_marginTop="3dp"
                        android:textSize="14dp"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="@color/black"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/kpsp42bulan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/birumuda"
                app:cardCornerRadius="15dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/gbr4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:maxHeight="200dp"
                        android:layout_marginLeft="-10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/kpsp4" />

                    <TextView
                        android:id="@+id/title4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/gbr4"
                        android:layout_marginTop="15dp"
                        android:text="KPSP"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunito_black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Untuk anak umur 42 bulan"
                        android:layout_below="@+id/title4"
                        android:layout_toRightOf="@id/gbr4"
                        android:layout_marginTop="3dp"
                        android:textSize="14dp"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="@color/black"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/kpsp48bulan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/birumuda"
                app:cardCornerRadius="15dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/gbr5"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:maxHeight="200dp"
                        android:layout_marginLeft="-10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/kpsp5" />

                    <TextView
                        android:id="@+id/title5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/gbr5"
                        android:layout_marginTop="15dp"
                        android:text="KPSP"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunito_black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Untuk anak umur 48 bulan"
                        android:layout_below="@+id/title5"
                        android:layout_toRightOf="@id/gbr5"
                        android:layout_marginTop="3dp"
                        android:textSize="14dp"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="@color/black"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>