<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".TentangActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/biru">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="12dp"
            android:text="Tentang BalitApp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/privat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/outline_privacy_tip_24"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="22dp"/>

        <TextView
            android:id="@+id/txtprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kebijakan Privasi"
            android:layout_toRightOf="@id/privat"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="22dp"
            android:src="@drawable/baseline_keyboard_arrow_down_24"
            android:textColor="@color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <ImageView
            android:id="@+id/contact"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/outline_contact_phone_24"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="22dp"/>

        <TextView
            android:id="@+id/txtcontact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kontak Kami"
            android:layout_toRightOf="@id/contact"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="22dp"
            android:src="@drawable/baseline_keyboard_arrow_down_24"
            android:textColor="@color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <ImageView
            android:id="@+id/other"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/outline_pending_24"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="22dp"/>

        <TextView
            android:id="@+id/txtother"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lain-lain"
            android:layout_toRightOf="@id/other"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="22dp"
            android:src="@drawable/baseline_keyboard_arrow_down_24"
            android:textColor="@color/black" />
    </RelativeLayout>
</LinearLayout>