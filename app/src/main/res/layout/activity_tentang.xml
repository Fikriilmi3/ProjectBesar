<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".TentangActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/toolbar"
        android:background="@drawable/round_btn"
        app:logo="@drawable/baseline_arrow_back_24"
        app:title="Tentang BalitApp"
        app:titleMarginStart="25dp"
        app:titleTextColor="@color/white"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/white_top_buttons">

        <ImageView
            android:id="@+id/privat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/outline_privacy_tip_24"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="18dp"/>

        <TextView
            android:id="@+id/txtprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kebijakan Privasi"
            android:layout_toRightOf="@id/privat"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="32dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/privat"
            android:src="@drawable/baseline_keyboard_arrow_down_24"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/contact"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/outline_contact_phone_24"
            android:layout_below="@+id/privat"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="18dp"/>

        <TextView
            android:id="@+id/txtcontact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kontak Kami"
            android:layout_below="@+id/privat"
            android:layout_toRightOf="@id/contact"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="32dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/privat"
            android:layout_toRightOf="@id/contact"
            android:src="@drawable/baseline_keyboard_arrow_down_24"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/other"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/outline_density_medium_24"
            android:layout_below="@+id/contact"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="18dp"/>

        <TextView
            android:id="@+id/txtother"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lain-lain"
            android:layout_below="@+id/contact"
            android:layout_toRightOf="@id/other"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="28dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/contact"
            android:layout_toRightOf="@id/other"
            android:src="@drawable/baseline_keyboard_arrow_down_24"
            android:textColor="@color/black" />

    </RelativeLayout>
</LinearLayout>