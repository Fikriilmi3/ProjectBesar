<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_btn"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="22dp"
            android:textColor="@color/white"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/white_top_buttons"
            android:backgroundTint="@color/birumuda"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="20dp"
                android:text="BalitApp"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_black"/>

            <ImageView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_email_black_24dp"
                android:layout_below="@+id/user"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="110dp"
                android:textSize="16dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="balitapp.co.id"
                android:layout_below="@+id/user"
                android:layout_toRightOf="@id/email"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:textSize="16dp"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone_iphone_black_24dp"
                android:layout_below="@+id/email"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="110dp"
                android:textSize="16dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="081217485430"
                android:layout_below="@+id/textemail"
                android:layout_toRightOf="@id/phone"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:textSize="16dp"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/edit"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/user"
                android:src="@drawable/baseline_edit_note_24"
                android:textColor="@color/black" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informasi Umum"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="22dp"
            android:textColor="@color/white"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@drawable/white_top_buttons"
            android:backgroundTint="@color/birumuda"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/outline_account_circle_24"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/txtprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile tertaut"
                android:layout_toRightOf="@id/profile"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="32dp"
                android:textSize="20dp"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/profiltertaut"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/txtprofile"
                android:src="@drawable/baseline_arrow_forward_ios_24"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/profile"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="7dp"
                android:background="@color/black"/>

            <ImageView
                android:id="@+id/info"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/outline_info_24"
                android:layout_below="@+id/profile"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/txtinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tentang"
                android:layout_below="@+id/profile"
                android:layout_toRightOf="@id/info"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="31dp"
                android:textSize="20dp"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/tentang"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="164dp"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/profile"
                android:layout_toRightOf="@id/txtinfo"
                android:src="@drawable/baseline_arrow_forward_ios_24"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/info"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="7dp"
                android:background="@color/black"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferensi"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="22dp"
            android:textColor="@color/white"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/white_top_buttons"
            android:backgroundTint="@color/birumuda"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/keluar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_logout_24"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/txtkeluar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keluar"
                android:layout_toRightOf="@id/keluar"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="26dp"
                android:textSize="20dp"
                android:textColor="@color/black"/>

        </RelativeLayout>

    </LinearLayout>
</FrameLayout>